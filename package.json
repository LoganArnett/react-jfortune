{
  "name": "react-jfortune",
  "version": "1.0.0",
  "description": "the jquery jfortune ported to react",
  "main": "jfortune.min.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "mocha --compilers js:babel-core/register *.test.js",
    "compile": "babel -d lib/ src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sminutoli/react-jfortune.git"
  },
  "keywords": [
    "jfortune",
    "react",
    "es2015",
    "mocha",
    "expect"
  ],
  "author": "sminutoli",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sminutoli/react-jfortune/issues"
  },
  "homepage": "https://github.com/sminutoli/react-jfortune#readme",
  "eslintConfig": {
    "extends": "etermax",
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "optionalDependencies": true,
          "peerDependencies": true
        }
      ],
      "react/forbid-prop-types": [
        0
      ]
    },
    "no-plusplus": [
      1,
      {
        "allowForLoopAfterthoughts": true
      }
    ]
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "enzyme": "^2.7.1",
    "eslint-config-etermax": "0.0.2",
    "expect": "^1.20.2",
    "mocha": "^3.2.0"
  },
  "dependencies": {
    "bezier": "^1.0.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  }
}
